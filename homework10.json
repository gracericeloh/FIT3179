{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 190,
  "height": 200,
  "title": {"text": "Australia's Trading Sectors 2016", "fontSize": 20},
  "data": {
    "url": "https://raw.githubusercontent.com/gracericeloh/FIT3179/main/2016_import_export.csv"
  },
  "params": [
    {
      "name": "Sector_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Agriculture, forestry & fisheries",
          "Manufactures",
          "Minerals & fuels",
          "Other goods"
        ],
        "labels": [
          "Show All",
          "Agriculture, forestry & fisheries",
          "Manufactures",
          "Minerals & fuels",
          "Other goods"
        ],
        "name": "Sector Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "Sector_selection == null || datum.Sector == Sector_selection"},
    {"calculate": "datum.Sector", "as": "Number of imports and exports"}
  ],
  "selection": {
    "sector_highlight": {
      "type": "multi",
      "fields": ["Sector"],
      "bind": "legend"
    }
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "aggregate": "count",
      "type": "quantitative",
      "stack": "zero",
      "axis": {
        "title": "Number of imports and exports",
        "titleFontSize": 20,
        "labelFontSize": 15
      }
    },
    "y": {
      "field": "State",
      "type": "ordinal",
      "sort": "-x",
      "axis": {
        "title": "States",
        "titleFontSize": 20,
        "titleAngle": 0,
        "labelFontSize": 15
      }
    },
    "tooltip": [
      {"field": "State", "type": "nominal"},
      {"field": "Sector", "type": "nominal", "title": "Sector"}
    ],
    "color": {
      "type": "nominal",
      "field": "Sector",
      "scale": {
        "domain": [
          "Agriculture, forestry & fisheries",
          "Manufactures",
          "Minerals & fuels",
          "Other goods"
        ],
        "range": ["#20A30D", "#0D5CA3", "#8C0DA3", "#A3690D"]
      },
      "title": "Sector",
      "legend": {
        "orient": "left",
        "labelFontSize": 15,
        "titleFontSize": 20,
        "labelLimit": 250
      }
    },
    "opacity": {
      "condition": {"selection": "sector_highlight", "value": 0.6},
      "value": 0.2
    }
  },
  "config": {}
}
