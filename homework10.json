{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": {
    "text": "Trades with Geographic partner",
    "fontSize": 20,
    "align": "center",
    "anchor": "middle",
    "lineHeight": 50
  },
  "width": {"step": 75},
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/gracericeloh/FIT3179/main/2016_import_export.csv"
  },
  "params": [
    {
      "name": "geo_selection",
      "bind": {
        "input": "select",
        "options": [null, "Asia", "Europe", "Oceania & Antarctica"],
        "labels": ["Show All", "Asia", "Europe", "Oceania & Antarctica"],
        "name": "Geographic Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "geo_selection == null || datum.Geo_1 == geo_selection"},
    {
      "calculate": "datum.Trade_type == 'Total Exports' ? 'Total Exports' : 'Total Imports'",
      "as": "Trade type"
    }
  ],
  "selection": {
    "tradetype_highlight": {
      "type": "multi",
      "fields": ["Trade type"],
      "bind": "legend"
    }
  },
  "mark": "bar",
  "encoding": {
    "column": {
      "field": "Geo_1",
      "type": "nominal",
      "spacing": 30,
      "header": {"title": "", "titleFontSize": 10, "labelFontSize": 15}
    },
    "x": {
      "field": "Trade type",
      "axis": {
        "labelAngle": -35,
        "title": "",
        "labelFontSize": 15,
        "titleFontSize": 20
      }
    },
    "y": {
      "aggregate": "count",
      "field": "Trade type",
      "axis": {"title": "Number of trades", "grid": false, "labelFontSize": 15}
    },
    "color": {
      "field": "Trade type",
      "scale": {"range": ["#675193", "#ca8861"]}
    },
    "opacity": {
      "condition": {"selection": "tradetype_highlight", "value": 0.6},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Geo_1", "type": "nominal", "title": "Geographic location"},
      {"field": "Trade type", "type": "nominal", "title": "Trade type"},
      {"field": "Trade type", "type": "quantitative", "title": "Number of trades",
        "aggregate": "count", "format": ","}
        
 
    ]
  },
  "config": {"view": {"stroke": "transparent"}, "axis": {"domainWidth": 1}}
}
