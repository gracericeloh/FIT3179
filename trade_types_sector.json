{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": {
    "text": "Trade types by sectors",
    "fontSize": 20,
    "align": "center",
    "anchor": "middle",
    "lineHeight": 50
  },
  "width": {"step": 100},
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/gracericeloh/FIT3179/main/2016_import_export.csv"
  },
  "transform": [
    {
      "calculate": "datum.Trade_type == 'Total Exports' ? 'Total Exports' : 'Total Imports'",
      "as": "Trade type"
    }
  ],
  "mark": "bar",
  "encoding": {
    "column": {
      "field": "Sector",
      "type": "nominal",
      "spacing": 10,
      "header": {"labelFontSize": 15}
    },
    "x": {
      "field": "Trade type",
      "axis": {"labelAngle": -35, "title": "", "labelFontSize": 15}
    },
    "y": {
      "aggregate": "count",
      "field": "Trade type",
      "title": "Number of trades",
      "axis": {"grid": false, "labelFontSize": 15}
    },
    "color": {"field": "Trade type", "scale": {"range": ["#675193", "#ca8861"]}}
  },
  "config": {"view": {"stroke": "transparent"}, "axis": {"domainWidth": 1}}
}